<div>
    <a href='/'>Home</a>
</div>
<h3>Archive</h3>
<ul>
    <% page.posts.each(function(post){ %>
        <li>
            <h3>
                <a href="<%- url_for(post.path) %>">
                    <%= post.title %>
                </a>
            </h3>
            <div>
                <%= date(post.date, config.date_format) %>
            </div>
            <% if(post.excerpt) { %>
                <p>
                    <%- post.excerpt %>
                    <a href="<%- url_for(post.path) %>">
                        ...Read More
                    </a>
                </p>
            <% } %>
        </li>
    <% }) %>
</ul>
