<div id="blog-div">
    <h3>My Thoughts in Text Form</h3>
    <ul>
        <% var shown = 0; %>
        <% page.posts.each(function(post){ %>
            <% if (shown < 3) { %>
                <li>
                    <h3>
                        <a href="<%- url_for(post.path) %>">
                            <%= post.title %>
                        </a>
                    </h3>
                    <div>
                        <%= date(post.date, config.date_format) %>
                    </div>
                    <% if(post.excerpt) { %>
                        <p>
                            <%- post.excerpt %>
                            <a href="<%- url_for(post.path) %>">
                                ...Read More
                            </a>
                        </p>
                    <% } %>
                </li>
                <% ++shown; %>
            <% } %>
        <% }) %>
    </ul>
    <a href="/archives">All blog posts</a>
</div>
